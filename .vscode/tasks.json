{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy hh-wp-slack-viewer",
            "type": "shell",
            "command": "rsync",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "args": [
                "--verbose",
                "--partial",
                "--progress",
                "--recursive",
                "--delete",
                // "--dry-run",
                "--exclude", ".git/",
                "--exclude", ".gitignore",
                "--exclude", ".vscode/",
                "--exclude", "vendor",
                "-p", "--chmod=Dug=rwx,Fug=rw,Do=rx,Fo=r",
                "./hh-wp-slack-viewer",
                "${config:deploy.target}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}